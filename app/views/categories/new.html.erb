<h1 class="text-center mt-4">Create a new Category</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-10">
            <%= render 'shared/errors', obj: @category %>
                <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                    <div class="input-group row">
                        <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
                        <div class="col-10">
                            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
                        </div>
                    </div>
                    
                    <div class="input-group justify-content-center mt-3">
                        <%= f.submit class: "btn btn-outline-light btn-lg text-center" %>
                    </div>
                    
                <% end %>
            </div>
        
            <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "remove-line text-center mt-2 text-info" %>
        </div>
</div>